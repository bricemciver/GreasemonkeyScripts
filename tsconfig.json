{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "incremental": true,
    "moduleResolution": "node",
    "outDir": "dist"
  },
  "include": ["src/main/**/*.ts", "src/scripts/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
