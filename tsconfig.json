{
  "extends": ["@tsconfig/recommended/tsconfig.json"],
  "compilerOptions": {
    "module": "umd",
    "lib": ["es2018", "dom"],
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "moduleResolution": "node",
    "outDir": "dist",
    "removeComments": false,
    "rootDir": "./src/main/",
    "sourceMap": true
  },
  "include": ["src/main/**/*.ts"]
}
