{
  "name": "greasemonkeyscripts",
  "version": "1.0.0",
  "description": "My collection of GreaseMonkey scripts",
  "scripts": {
    "build": "esbuild ./src/main/**/*.ts --bundle --sourcemap --charset=utf8 --format=iife --log-level=warning --outdir=./dist && npm run create-headers",
    "create-headers": "npx ts-node ./src/scripts/create-headers.ts ./src/main/**/*.meta.json ./dist",
    "lint": "eslint ./src/main --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "husky install",
    "prettier:check": "prettier --check \"**/*.{md,json,yml,html,ts}\"",
    "prettier:format": "prettier --write \"**/*.{md,json,yml,html,ts}\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bricemciver/GreasemonkeyScripts.git"
  },
  "author": "Brice McIver",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bricemciver/GreasemonkeyScripts/issues"
  },
  "homepage": "https://github.com/bricemciver/GreasemonkeyScripts#readme",
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/greasemonkey": "^4.0.4",
    "@types/node": "^20.12.7",
    "@types/tampermonkey": "^5.0.2",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.0.4",
    "typescript-eslint": "^7.7.0"
  }
}
